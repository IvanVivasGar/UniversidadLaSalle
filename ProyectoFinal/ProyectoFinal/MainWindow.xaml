            <Button Name="btnReiniciarGanador" Content="Reiniciar" HorizontalAlignment="Left" Margin="26,640,0,0" VerticalAlignment="Top" Height="48" Width="186" Foreground="Gold" FontSize="30" Click="btnReiniciarGanador_Click">
