<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangMan.MainPage"
             BackgroundColor="#f5f5f5"
             Title="Juego del Ahorcado">

    <Grid x:Name="MainGrid" Padding="20" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título del juego -->
        <Label Grid.Row="0" 
               Text="JUEGO DEL AHORCADO" 
               FontSize="28" 
               FontAttributes="Bold"
               TextColor="#3498db"
               HorizontalOptions="Center"/>

        <!-- Área para la imagen del ahorcado -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               CornerRadius="10" 
               HasShadow="True"
               Margin="10,0">
            <Image x:Name="HangmanImage"
                   Source="hangman_0.png"
                   Aspect="AspectFit"
                   HeightRequest="200"/>
        </Frame>

        <!-- Área para mostrar la palabra a adivinar -->
        <Frame Grid.Row="2" 
            BackgroundColor="#e0e0e0" 
            BorderColor="#ff0000"
            CornerRadius="10" 
            HasShadow="True"
            Padding="15"
            HeightRequest="80">
            <Label x:Name="WordToGuess"
                Text="TEST TEXT"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="#000000"
                BackgroundColor="#ffff00"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>

        <!-- Área para mostrar letras usadas -->
        <Frame Grid.Row="3" 
               BackgroundColor="White" 
               CornerRadius="10" 
               HasShadow="True"
               Padding="15">
            <VerticalStackLayout Spacing="5">
                <Label Text="Letras usadas:" 
                       FontSize="16" 
                       TextColor="#7f8c8d"/>
                <Label x:Name="UsedLetters" 
                       Text=""
                       FontSize="18"
                       TextColor="#e74c3c"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Área para el teclado -->
        <Frame Grid.Row="4" 
               BackgroundColor="White" 
               CornerRadius="10" 
               HasShadow="True"
               Padding="10">
            <VerticalStackLayout Spacing="10">
                <!-- Primera fila de letras -->
                <FlexLayout JustifyContent="SpaceEvenly">
                    <Button Text="A" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="B" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="C" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="D" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="E" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="F" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="G" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                </FlexLayout>

                <!-- Segunda fila de letras -->
                <FlexLayout JustifyContent="SpaceEvenly">
                    <Button Text="H" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="I" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="J" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="K" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="L" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="M" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="N" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                </FlexLayout>

                <!-- Tercera fila de letras -->
                <FlexLayout JustifyContent="SpaceEvenly">
                    <Button Text="Ñ" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="O" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="P" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="Q" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="R" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="S" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="T" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                </FlexLayout>

                <!-- Cuarta fila de letras -->
                <FlexLayout JustifyContent="SpaceEvenly">
                    <Button Text="U" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="V" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="W" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="X" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="Y" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                    <Button Text="Z" WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#3498db" TextColor="White" Clicked="OnLetterClicked"/>
                </FlexLayout>

                <!-- Botón de nuevo juego -->
                <Button Text="Nuevo Juego" 
                        BackgroundColor="#2ecc71" 
                        TextColor="White"
                        CornerRadius="10"
                        Margin="20,10"
                        Clicked="OnNewGameClicked"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>